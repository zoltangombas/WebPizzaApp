@model WebPizzaApp.Data.Rendeles

@{
    ViewData["Title"] = "Plusz pizza a rendeléshez";
}


<h3>Adj pizzát a rendeléshez!</h3>
<hr />

<div class="row">
    <div class="col-md-4"></div>
    <form asp-action="Addpizza">
        <div class="form-group">
            <label asp-for="RendelesId" class="control-label"></label>
            <input asp-for="RendelesId" class="form-control" />
        </div>
        <div class="form-group">
            <label Value="Pizza" class="control-label"></label>
            <select name="selectedPizza" class="form-control" asp-items="ViewBag.PizzaId">
                <option value="">--Válassz pizzát--</option>
            </select>
        </div>
        <input type="hidden" asp-for="RendelesId" />
        <input type="submit" value="+ Pizza" class="btn btn-primary" /> |
        <a asp-action="Index">Mégsem</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

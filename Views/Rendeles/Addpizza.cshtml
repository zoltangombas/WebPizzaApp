@model WebPizzaApp.Data.Rendeles

@{
    ViewData["Title"] = "+ Pizza";
}

<h1>+ Pizza</h1>

<h4>Rendelés</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Addpizza">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RendelesId" />

            <div class="form-group">
                <label asp-for="AllapotId" class="control-label"></label>
                <select asp-for="AllapotId" class="form-control" asp-items="ViewBag.AllapotId"></select>
                <span asp-validation-for="AllapotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FutarId" class="control-label"></label>
                <select asp-for="FutarId" class="form-control" asp-items="ViewBag.FutarId"></select>
                <span asp-validation-for="FutarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CimId" class="control-label"></label>
                <select asp-for="CimId" class="form-control" asp-items="ViewBag.CimId"></select>
                <span asp-validation-for="CimId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hozzáad" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
